{
    "[blade]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.formatOnSave": true
    },
    "[javascript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    // "blade.format.enable": true,
    "[json]": {
        "editor.defaultFormatter": "vscode.json-language-features",
        "editor.quickSuggestions": {
            "strings": true
        },
        "editor.suggest.insertMode": "replace",
        "gitlens.codeLens.scopes": [
            "document"
        ]
    },
    "[typescript]": {
        "editor.defaultFormatter": "vscode.typescript-language-features"
    },
    "[vue]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "editor.bracketPairColorization.enabled": true,
    "editor.codeActionsOnSave": {
        "source.fixAll.eslint": "explicit",
        "source.fixAll.stylelint": "explicit",
        "source.fixAll.tslint": "explicit"
    },
    "editor.fontFamily": "Geist Mono",
    "editor.fontSize": 13,
    "editor.formatOnPaste": true,
    "editor.formatOnSave": true,
    "editor.formatOnType": true,
    "editor.guides.bracketPairs": true,
    "editor.linkedEditing": true,
    "editor.mouseWheelZoom": true,
    // "editor.minimap.enabled": false,
    "editor.tabSize": 4,
    "editor.wordSeparators": "`~!@#%^&*()-=+[{]}\\|;:'\",.<>/?",
    "emeraldwalk.runonsave": {
        "commands": [
            {
                "cmd": "${workspaceFolder}/vendor/bin/pint ${file}",
                "match": "\\.php$"
            }
        ]
    },
    "eslint.validate": [
        "javascript",
        "javascriptreact",
        "typescript",
        "typescriptreact"
    ],
    "eslint.workingDirectories": [
        {
            "directory": "."
        } // should point to the directory containing eslint config
    ],
    "explorer.compactFolders": false,
    "explorer.confirmDelete": true,
    "files.autoSave": "afterDelay",
    "files.autoSaveDelay": 3000,
    "files.trimTrailingWhitespace": true,
    "gitlens.blame.avatars": false,
    "gitlens.blame.compact": false,
    "gitlens.blame.format": "${author|10} ${date}",
    "gitlens.blame.heatmap.enabled": false,
    "gitlens.blame.highlight.locations": [
        "gutter",
        "line",
        "overview"
    ],
    "gitlens.codeLens.enabled": false,
    "gitlens.defaultDateFormat": "DD/MM/YYYY",
    "gitlens.defaultDateShortFormat": "DD/MM/YYYY",
    "gitlens.hovers.enabled": false,
    // "php.validate.executablePath": "/usr/bin/php",
    "gitlens.statusBar.enabled": false,
    "intelephense.environment.phpVersion": "8.1.0",
    "javascript.preferences.quoteStyle": "single",
    "javascript.updateImportsOnFileMove.enabled": "always",
    "phpmd.rules": "cleancode,codesize,controversial,design,unusedcode,naming",
    "phpmd.verbose": true,
    "prettier.printWidth": 120,
    "typescript.preferences.quoteStyle": "single",
    "typescript.updateImportsOnFileMove.enabled": "always",
    "vsicons.dontShowNewVersionMessage": true,
    "workbench.colorCustomizations": {
        "tree.indentGuidesStroke": "#008070"
    },
    // "workbench.colorTheme": "One Dark Pro Darker",
    "workbench.editor.limit.enabled": true,
    "workbench.editor.limit.value": 2,
    "workbench.editor.showTabs": "multiple",
    "workbench.sideBar.location": "left",
    "workbench.startupEditor": "none",
    "workbench.statusBar.visible": true,
    "workbench.tree.indent": 24,
    "yaml.customTags": [],
    "yaml.schemas": {}
}